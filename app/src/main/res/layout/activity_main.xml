<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_centerVertical="true" android:layout_centerHorizontal="true" >
        <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp" app:srcCompat="@drawable/ic_baseline_keyboard_voice_24"
                android:background="#fff"
                android:id="@+id/btnRecord" android:layout_marginLeft="0dp"
        />
        <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp" app:srcCompat="@drawable/ic_baseline_play_arrow_24"
                android:background="#fff"
                android:id="@+id/btnPlay" android:layout_marginLeft="120dp"
        />
        <ImageButton
                android:layout_width="70dp"
                android:background="#fff"
                android:layout_height="70dp" app:srcCompat="@drawable/ic_baseline_stop_24"
                android:id="@+id/btnStop" android:layout_marginLeft="240dp"
                />
    </RelativeLayout>
    <TextView android:layout_width="match_parent" android:layout_height="100dp"
              android:id="@+id/text"
              android:layout_alignParentBottom="true"
              android:background="#a0a6b0"/>
</RelativeLayout>